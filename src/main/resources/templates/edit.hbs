{{#partial "title"}}Editando datos del estudiante{{/partial}}

{{#partial "content"}}
    <h1>Editar el estudiante</h1>

    <form class="form" action="/update/" method="post">
        <div class="form-group">
            <label id="mat">Matricula:</label>
            <input id="mat" type="number" value="{{ estudiante.matricula }}" class="form-control" name="matricula">
        </div>
        <div class="form-group">
            <label id="nom">Nombres:</label>
            <input id="nom" type="text" value="{{ estudiante.nombre }}" class="form-control" name="nombre">
        </div>
        <div class="form-group">
            <label id="ape">Apellidos:</label>
            <input id="ape" type="text" value="{{ estudiante.apellido }}" class="form-control" name="apellido">
        </div>

        <div class="form-group">
            <label id="tel">Tel√©fonos</label>
            <input id="tel" type="tel" value="{{ estudiante.telefono }}" class="form-control" name="telefono">
        </div>

        <hr>

        <button type="submit" class="btn mx-3"><i class="far fa-save"></i> Actualizar</button>
        <a href="/delete">
            <button type="submit" class="btn btn-danger mx-3"><i class="far fa-trash-alt"></i> Eliminar</button>
        </a>
    </form>


{{/partial}}

